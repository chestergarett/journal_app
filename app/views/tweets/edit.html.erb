<h1>edit tweet </h1>
<p>by: <%=@tweet.user.email%></p>

<% if @tweet.errors.any?%>
    <h4> Errors in tweeting </h4>
    <ul>
        <%@tweet.errors.full_messages.each do |msg| %>
            <li><%= msg%></li>
        <%end %>
    </ul>
<%end%>
<%= form_with(model: @tweet, local: true) do |f|%>

    <p>
        <%=f.label :tweet%>
        <%=f.text_area :tweet%>
    </p>

    <p>
        <%=f.label :topic%>
        <%=f.collection_select(:topic_ids, Topic.all, :id, :topic, {prompt: "Make selection from list below"}, {multiple: true})%>
    </p>

    <button>Edit</button>
<%end%>
<p><%=link_to 'Show all', tweets_path%> </p>


